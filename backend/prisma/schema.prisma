generator client {
provider = "prisma-client-js"
}


datasource db {
provider = "sqlite"
url = env("DATABASE_URL")
}


model VehicleType {
id Int @id @default(autoincrement())
name String
wheels Int
vehicles Vehicle[]
}


model Vehicle {
id Int @id @default(autoincrement())
model String
typeId Int
type VehicleType @relation(fields: [typeId], references: [id])
bookings Booking[]
}


model Booking {
id Int @id @default(autoincrement())
firstName String
lastName String
vehicleId Int
vehicle Vehicle @relation(fields: [vehicleId], references: [id])
startDate DateTime
endDate DateTime
createdAt DateTime @default(now())
}